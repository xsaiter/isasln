{
    "version": "2.0.0",
    "command": "bash",
    "args": [
        "-c"
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
    },
    "tasks": [
        {
            "label": "cmake build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": [
                "./build.sh"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "olymp build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/src/olymp/codef/contests/1270"
            },
            "args": [
                "make"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}