{
  "version": "2.0.0",
  "command": "bash",
  "args": ["-c"],
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": true,
    "panel": "new"
  },
  "tasks": [
    {
      "label": "cmake build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "args": ["./build.sh"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "codef build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}/src/olymp/codef/contests"
      },
      "args": ["make"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "acmp build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}/src/olymp/acmp/0002"
      },
      "args": ["make"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "mesh build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}/src/olymp/mesh"
      },
      "args": ["make"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
